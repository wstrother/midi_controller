{
  "layers": [
    {
      "name": "environment",
      "class": "MidiLayer",
      "groups": "sprite group",
      "ControllerInterface": {
        "load_controllers": [
          "64_controller.json",
          "rb_controller.json"
        ]
      },
      "MidiHudInterface": {
        "set_hud_listeners": "64_midi.json",
        "add_midi_huds": [
          [
            [0, 0],
            1, 20, 300,
            "Button 1"
          ],

          [
            [300, 0],
            0, 20, 300,
            "Meter 1",
            "Button 2"
          ]

        ]
      }
    }
  ],

  "sprites": [
    {
      "name": "Meter 1",
      "class": "FaderSprite",
      "MidiHudInterface": {
        "set_device": ["Dpad", "y", -1, 2]
      }
    },

    {
      "name": "Button 1",
      "class": "ButtonSprite",
      "MidiHudInterface": {
        "set_device": ["RB Dpad", [1, 0]]
      }
    },

    {
      "name": "Button 2",
      "class": "ButtonSprite",
      "MidiHudInterface": {
        "set_device": ["Dpad", [-1, 0]]
      }
    },

    {
      "name": "Button 3",
      "class": "ButtonSprite",
      "MidiHudInterface": {
        "set_device": ["Dpad", [0, 1]]
      }
    },

    {
      "name": "Button 4",
      "class": "ButtonSprite",
      "MidiHudInterface": {
        "set_device": ["Stick", [0, -1]]
      }
    }
  ]
}